<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="menulink" label="PLG_CONTENT_SOCIALCUSTOMMETATAG_LINK_OPTIONS" >

		<field name="social_allowed" type="list" default="0" label="PLG_CONTENT_SOCIALCUSTOMMETATAG_ALLOWED_LABLE" 
			description="PLG_CONTENT_SOCIALCUSTOMMETATAG_ALLOWED_DESC" multiple="true">
			<option value="0">Facebook</option>
			<option value="1">Twitter</option>
			<option value="2">Instagram</option>
			<option value="3">Pintrest</option>
		</field>

		<field
			name="social_meta_title"
			type="text"
			label="PLG_CONTENT_SOCIALCUSTOMMETATAG_ITEM_FIELD_TITLE_LABEL"
			description="PLG_CONTENT_SOCIALCUSTOMMETATAG_ITEM_FIELD_TITLE_DESC"
			size="40"
		/>

		<field
			name="social_meta_desc"
			type="textarea"
			label="PLG_CONTENT_SOCIALCUSTOMMETATAG_DESC_ITEM_FIELD_LABEL"
			description="PLG_CONTENT_SOCIALCUSTOMMETATAG_DESC_ITEM_FIELD_DESC"
		/>

		<field
			name="social_meta_type"
			type="text"
			label="PLG_CONTENT_SOCIALCUSTOMMETATAG_TYPE_ITEM_FIELD_LABEL"
			description="PLG_CONTENT_SOCIALCUSTOMMETATAG_TYPE_ITEM_FIELD_DESC"
			size="40"
		/>

		<field name="social_meta_image" 
			type="media" 
			directory="images"
			label="PLG_CONTENT_SOCIALCUSTOMMETATAG_IMAGE_ITEM_FIELD_LABEL"
			description="PLG_CONTENT_SOCIALCUSTOMMETATAG_IMAGE_ITEM_FIELD_DESC"
		/>

	</fieldset>
</form>